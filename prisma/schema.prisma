generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String       @id @default(cuid())
  name      String
  email     String       @unique
  password  String
  createdAt DateTime     @default(now())
  transactions Transaction[]
}

model Transaction {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  type      String
  category  String
  amount    Float
  note      String?
  date      DateTime @default(now())
}
